# cp env.template .env

# ====================================
# DATABASE CONFIGURATION
# ====================================
DATABASE_URL=postgresql://username:password@localhost:5432/daniel_db

# ====================================
# SERVER CONFIGURATION
# ====================================
PORT=3001
NODE_ENV=development

# ====================================
# BETTER AUTH CONFIGURATION
# ====================================
# Required: Secret key for Better Auth (used for session encryption and cookie signing)
# Generate a secure secret:
#   Windows (PowerShell): -join ((48..57) + (65..90) + (97..122) | Get-Random -Count 32 | % {[char]$_})
#   Mac/Linux: openssl rand -base64 32
#   Online: https://generate-secret.vercel.app/32
BETTER_AUTH_SECRET=your-super-secret-better-auth-key-change-this-in-production

# Optional: Fallback to JWT_SECRET if BETTER_AUTH_SECRET is not set
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Backend URL (where Better Auth API is hosted)
# For local development: http://localhost:3001
# For production: https://your-backend-url.railway.app or https://api.yourdomain.com
BETTER_AUTH_URL=http://localhost:3001

# Trusted Origins (comma-separated list of allowed frontend URLs)
# These are the URLs that can make authenticated requests to your backend
# For local development, include all your local frontend URLs
# For production, include your production frontend URLs
TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# ====================================
# OPENAI CONFIGURATION (Optional)
# ====================================
# Required only if using AI chat features
OPENAI_API_KEY=your-openai-api-key-here

